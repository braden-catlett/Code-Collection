<Application
    x:Class="Win8Sherpin.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Win8Sherpin"
    xmlns:localData="using:Win8Sherpin.Data">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Application-specific resources -->

            <x:String x:Key="AppName">sherpin.com</x:String>
            <x:String x:Key="Login">login</x:String>
            <x:String x:Key="Logout">logout</x:String>
            <x:String x:Key="KeywordTitle">keywords</x:String>
            <x:String x:Key="KeywordAdd">&lt;add keyword&gt;</x:String>
            <x:String x:Key="ChannelTitle">channels</x:String>
            <x:String x:Key="GenreTitle">genres</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
