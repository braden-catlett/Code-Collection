<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3b5998"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLogo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sherpin_logo_transparent" >
        </ImageView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0px"
            android:paddingLeft="0px"
            android:paddingRight="20px"
            android:paddingTop="10px"
            android:text="MyMediaGuide"
            android:textColor="#FFFFFF"
            android:textSize="16px"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLogo"
        android:textColor="#FFFFFF"
        android:textSize="22px"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="18px" >
    </TextView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="16dp"
        android:text="Keywords:"
        android:textColor="#FFFFFF" >
    </TextView>

    <Spinner
        android:id="@+id/spinnerKW"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView4" >
    </Spinner>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerKW"
        android:layout_marginTop="16dp"
        android:text="Channels:"
        android:textColor="#FFFFFF" >
    </TextView>

    <Spinner
        android:id="@+id/spinnerChannel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView5" >
    </Spinner>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/spinnerChannel"
        android:layout_marginTop="16dp"
        android:text="Genre:"
        android:textColor="#FFFFFF" >
    </TextView>

    <Spinner
        android:id="@+id/spinnerGenre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView6" >
    </Spinner>

    <LinearLayout
        android:id="@+id/linearButtonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="0dp" >
    </LinearLayout>

</RelativeLayout>